<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layoutrelative">

    <TextView
        android:id="@+id/TextNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="150dp" android:layout_marginBottom="-5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="522dp"
        android:layout_alignBottom="@id/TextNumber"
        android:layout_marginBottom="-10dp">

        <EditText
            android:id="@+id/min"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TextNumber"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="470dp"
            android:hint="Mínimo"
            android:inputType="number" />

        <EditText
            android:id="@+id/max"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/min"
            android:layout_alignBottom="@+id/TextNumber"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="-189dp"
            android:layout_marginBottom="471dp"
            android:hint="Máximo"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/TextButton"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignBottom="@+id/TextNumber"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="381dp"
        android:gravity="center"
        android:text="Gerar Numero" />


</RelativeLayout>